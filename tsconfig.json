{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "lib": ["ES2022", "DOM"],
        "jsx": "react",
        "sourceMap": true,
        "rootDir": ".",
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "files": [
        "src/extension.ts",
        "src/client/views/context-chooser.view/view.tsx",
        "src/client/views/parallel-copilot.view/view.tsx"
    ]
}